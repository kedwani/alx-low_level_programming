#include "lists.h"


listint_t *insert_nodeint_at_index(listint_t **head, unsigned int idx, int n)
{
	unsigned int i;
	listint_t *new, *h = *head;

	if (!*head)
		return (NULL);

	new = malloc(sizeof(listint_t));
	if (!new)
		return (NULL);
	new->n = n;
	new->next = NULL;

	if (idx == 0)
	{
		new->next = *head;
		*head = new;
		return (*head);
	}
	for (i = 0; i < idx - 1; ++i)
	{
		if (!h)
		{
			free(new);
			return (NULL);
		}
		h = h->next;
	}
	if (!h)
	{
		free(new);
		return (NULL);
	}
	new->next = h->next;
	h->next = new;
	return (new);
}
